#!/usr/bin/env bash

set -eo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

function install_version() {
  local version=$1
  local download_path=$2
  local install_path=$3

  (
    echo "Installing sqldef v$version..."

    mkdir -p "$install_path/bin"

    echo "Installing mysqldef"
    cp "$download_path/mysqldef" "$install_path/bin/mysqldef"
    chmod +x "$install_path/bin/mysqldef"

    echo "Installing psqldef"
    cp "$download_path/psqldef" "$install_path/bin/psqldef"
    chmod +x "$install_path/bin/psqldef"

    echo "Installing mssqldef"
    cp "$download_path/mssqldef" "$install_path/bin/mssqldef"
    chmod +x "$install_path/bin/mssqldef"

    echo "Installing sqlite3def"
    cp "$download_path/sqlite3def" "$install_path/bin/sqlite3def"
    chmod +x "$install_path/bin/sqlite3def"

  ) || (rm -rf "$install_path"; fail "Failed to install sqldef v$version")
}

if [ "$ASDF_INSTALL_TYPE" != "version" ]; then
  fail "asdf-sqldef currently supports release install only"
fi

install_version "$ASDF_INSTALL_VERSION" "$ASDF_DOWNLOAD_PATH" "$ASDF_INSTALL_PATH"
